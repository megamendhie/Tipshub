<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/vertical_padding"
    android:paddingRight="@dimen/vertical_padding"
    android:paddingTop="@dimen/vertical_padding"
    tools:context=".FlagActivity">


    <ProgressBar
        android:id="@+id/prgLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        android:text="YOU CAN FLAG A POST IF THE POST IS OFFENSIVE OR FALSE.\n\nYOUR COMMENT WILL APPEAR IN RED COLOUR IN THE COMMENT SECTION. IT WILL ALSO HELP US TAKE ACTION."/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@id/txtDisplay"
        android:layout_marginTop="10dp">
    <MultiAutoCompleteTextView
        android:id="@+id/edtPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="200"
        android:minLines="10"
        android:gravity="start"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:inputType="textCapSentences|textMultiLine"
        android:background="@android:color/transparent"
        android:hint="Why are you flagging the post"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/lnrDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="end"
        android:layout_below="@id/txtInput">

        <TextView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="@color/colorAccent"
            android:text="CANCEL"/>


        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            style="@style/CustomButton"
            android:text="Submit"/>
    </LinearLayout>

</RelativeLayout>