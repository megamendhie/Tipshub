<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DF8B102"
        android:padding="6dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtRegion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CustomOutlinedBox"
            android:layout_marginEnd="5dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtLeague">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:maxLength="80"
                android:hint="Region"
                android:paddingTop="@dimen/txt_input_padding_ver"
                android:paddingBottom="@dimen/txt_input_padding_ver"
                android:textColorHint="#70707A" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLeague"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CustomOutlinedBox"
            android:layout_marginStart="5dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:layout_constraintTop_toTopOf="@id/txtRegion"
            app:layout_constraintStart_toEndOf="@id/txtRegion"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLeague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:maxLength="80"
                android:hint="League"
                android:paddingTop="@dimen/txt_input_padding_ver"
                android:paddingBottom="@dimen/txt_input_padding_ver"
                android:textColorHint="#70707A" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomOutlinedBox"
            android:layout_marginTop="2dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtRegion"
            app:layout_constraintStart_toStartOf="@id/txtRegion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:textColor="@color/brown"
                android:maxLength="80"
                android:hint="Time"
                android:paddingTop="@dimen/txt_input_padding_ver"
                android:paddingBottom="@dimen/txt_input_padding_ver"
                android:textColorHint="#70707A" />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_alignBaseline="@id/txtTime"
            android:entries="@array/status_type"
            app:layout_constraintStart_toEndOf="@id/txtTime"
            app:layout_constraintTop_toTopOf="@id/txtTime"
            app:layout_constraintBottom_toBottomOf="@id/txtTime"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtHomeTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CustomOutlinedBox2"
            android:layout_below="@id/txtRegion"
            android:layout_marginTop="2dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="@id/txtRegion"
            app:layout_constraintTop_toBottomOf="@id/txtTime"
            app:layout_constraintEnd_toStartOf="@id/txtResult">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtHomeTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:maxLength="80"
                android:hint="Home Team"
                android:paddingTop="@dimen/txt_input_padding_ver"
                android:paddingBottom="@dimen/txt_input_padding_ver"
                android:textColorHint="#70707A" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorAccent"
            android:text="vs"
            app:layout_constraintTop_toBottomOf="@id/txtTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtHomeTeam"
            app:layout_constraintBottom_toBottomOf="@id/txtHomeTeam"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtAwayTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="@style/CustomOutlinedBox2"
            android:layout_below="@id/txtRegion"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:layout_constraintTop_toTopOf="@id/txtHomeTeam"
            app:layout_constraintStart_toEndOf="@id/txtResult"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAwayTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:maxLength="80"
                android:hint="Away Team"
                android:paddingTop="@dimen/txt_input_padding_ver"
                android:paddingBottom="@dimen/txt_input_padding_ver"
                android:textColorHint="#70707A" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtPrediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomOutlinedBox2"
            android:layout_marginTop="2dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtHomeTeam"
            app:layout_constraintStart_toStartOf="@id/txtRegion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPrediction"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:maxLength="10"
                android:hint="Pred"
                android:paddingTop="@dimen/txt_input_padding_ver"
                android:paddingBottom="@dimen/txt_input_padding_ver"
                android:textColorHint="#70707A" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_color_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtPrediction"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>