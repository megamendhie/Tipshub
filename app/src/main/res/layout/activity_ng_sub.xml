<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@drawable/mat"
android:focusableInTouchMode="true"
tools:context=".NgSubActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:gravity="center"
        android:textSize="26sp"
        android:padding="16sp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:background="@color/dark_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_curved"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="16dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/visa_logo_new"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/master_card_logo_svg"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/verve"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dim_text_margin"
        android:layout_marginEnd="@dimen/dim_text_margin"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to charge"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="N3000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_text_margin"
        android:layout_marginEnd="@dimen/dim_text_margin"
        android:layout_marginTop="26dp"
        android:hint="CARD NUMBER"
        app:boxBackgroundColor="@color/white"
        style="@style/CustomOutlinedBox">

        <EditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="24"
            android:ems="10"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_text_margin"
        android:layout_marginEnd="@dimen/dim_text_margin"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    app:boxBackgroundColor="@color/white"
                    style="@style/CustomOutlinedBox">

                    <EditText
                        android:id="@+id/month"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:maxEms="4"
                        android:maxLength="2"
                        android:ems="10"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="YY"
                    app:boxBackgroundColor="@color/white"
                    style="@style/CustomOutlinedBox">

                    <EditText
                        android:id="@+id/year"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:maxEms="4"
                        android:maxLength="2"
                        android:ems="10"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:orientation="horizontal"
                    android:hint="CVV"
                    app:boxBackgroundColor="@color/white"
                    style="@style/CustomOutlinedBox"
                    android:layout_marginStart="45dp">

                    <EditText
                        android:id="@+id/cvv"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:maxEms="4"
                        android:maxLength="4"
                        android:ems="10"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Make Payment"
        app:backgroundTint="@color/bg_off_ye"
        android:textColor="#FFFFFF"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/layout_token_response"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:background="@color/dark_grey">

    <ProgressBar
        android:id="@+id/prgPayment"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textview_response"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        android:text="No transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#ffffff"/>

</LinearLayout>
</RelativeLayout>