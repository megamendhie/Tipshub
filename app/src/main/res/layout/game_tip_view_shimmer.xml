<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_off_green"
        android:padding="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/region"
                android:layout_width="180dp"
                android:layout_height="@dimen/placeholder_text_height"
                android:background="@color/placeholder_bg" />

            <ImageView
                android:id="@+id/imgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/region"
                app:srcCompat="@drawable/ic_event_color_24dp"/>

            <View
                android:id="@+id/time"
                android:layout_width="100dp"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_below="@id/region"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/imgTime"
                android:background="@color/placeholder_bg" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <View
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_weight="2"
                android:background="@color/placeholder_bg" />

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/placeholder_bg"
                android:text="vs" />


            <View
                android:id="@+id/away"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_weight="2"
                android:background="@color/placeholder_bg" />


            <View
                android:id="@+id/tip"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:background="@color/placeholder_bg" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>