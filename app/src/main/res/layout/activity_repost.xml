<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/vertical_padding"
    android:paddingTop="@dimen/vertical_padding"
    android:paddingRight="@dimen/vertical_padding"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/lnrUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10.0">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDp"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:src="@drawable/sample_dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/user_display_picture" />
        <View android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="10.0" />
    </LinearLayout>
    <EditText
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16.0sp"
        android:gravity="start"
        android:id="@+id/edtPost"
        android:background="@android:color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:hint="@string/type_your_post"
        android:maxLines="10"
        android:minLines="2"
        android:maxLength="450"
        android:layout_below="@id/lnrUp"
        android:inputType="textCapSentences|textMultiLine" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:drawable/editbox_background_normal"
        android:padding="6.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_below="@id/edtPost"
        android:layout_marginStart="18.0dip">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:id="@+id/txtChildUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username" />
            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16.0sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="I have seen a lot of beautiful things I want to share later.
         /n bu not now I have seen a lot of beautiful things I want to share later. /n bu not now" />
    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:id="@+id/lnrDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnClose"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close" />
        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post now"
            android:layout_marginStart="20.0dip"
            style="@style/CustomButton" />
    </LinearLayout>
</RelativeLayout>


