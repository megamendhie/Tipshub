<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@color/color_bg_login"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


  <ImageView
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:scaleType="fitXY"
      android:layout_marginTop="12dp"
      android:layout_gravity="center_horizontal"
      android:tint="@color/colorPrimaryDark"
      app:srcCompat="@drawable/ic_notifications_none_black_24dp"/>

  <TextView
      android:id="@+id/txtTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:gravity="center_horizontal"
      android:textColor="@color/color_oxblood"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:text="New available version"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="9.5"
      android:padding="10dp">

    <Button
        android:id="@+id/btnLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnUpdate"
        android:layout_marginEnd="119dp"
        android:text="@string/txt_later" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Looks like you have an older version of the app.\nPlease update to get the latest features and best experience."
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_below="@id/txtDescription"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:text="@string/txt_update"/>
  </RelativeLayout>
</LinearLayout>