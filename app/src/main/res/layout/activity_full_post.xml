<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullPostActivity">

    <ProgressBar
        android:id="@+id/prgPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <LinearLayout
            android:id="@+id/container_post"
            android:orientation="vertical"
            android:background="@drawable/container_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgDp"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/sample_dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="megamendhie"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5min ago"/>

                    <TextView
                        android:id="@+id/txtPostType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@drawable/tip_type_bg"
                        android:paddingStart="1.5dp"
                        android:paddingEnd="2dp"
                        android:text="3-5 odds"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp"
                    android:tint="#25b153"
                    android:src="@drawable/ic_check_circle_green_24dp"/>

                <ImageView
                    android:id="@+id/imgOverflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/img_like_bg"
                    android:contentDescription="more_options"
                    android:tint="@android:color/darker_gray"
                    android:src="@drawable/ic_more_vert_black_24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="I have seen a lot of beautiful things I want to share later.
         /n bu not now I have seen a lot of beautiful things I want to share later. /n bu not now"/>

            <LinearLayout
                android:id="@+id/lnrCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="1dp"
                android:clickable="true"
                android:background="@drawable/tip_code_bg"
                android:paddingEnd="4dp"
                android:layout_gravity="end">
                <ImageView
                    android:id="@+id/imgCode"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/hashtag"
                    android:tint="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/txtCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0e0e0e"
                    android:textStyle="bold"
                    android:text="okooji ee"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_child_post"
                android:orientation="vertical"
                android:background="@android:drawable/editbox_background_normal"
                android:padding="6.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:layout_below="@id/edtPost"
                android:layout_marginStart="18.0dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/childDp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sample_dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="10"
                        android:layout_marginStart="4dp">
                        <TextView
                            android:id="@+id/txtChildUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="megamendhie"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txtChildType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:background="@drawable/tip_type_bg"
                            android:paddingStart="1.5dp"
                            android:paddingEnd="2dp"
                            android:text=""/>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imgChildStatus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="2dp"
                        android:tint="#25b153"
                        android:src="@drawable/ic_check_circle_green_24dp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/txtChildPost"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/lnrChildCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="1dp"
                    android:clickable="true"
                    android:background="@drawable/tip_code_bg"
                    android:paddingEnd="4dp"
                    android:layout_gravity="end">
                    <ImageView
                        android:id="@+id/imgChildCode"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/hashtag"
                        android:tint="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/txtChildCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0e0e0e"
                        android:textStyle="bold"
                        android:text="okooji ee"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/img_like_bg"
                        android:src="@drawable/ic_thumb_up_black_24dp"/>
                    <TextView
                        android:id="@+id/txtLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="100"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imgDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/img_like_bg"
                        android:src="@drawable/ic_thumb_down_black_24dp"/>
                    <TextView
                        android:id="@+id/txtDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="33"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imgComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/img_like_bg"
                        android:src="@drawable/ic_comment_black_24dp"/>
                    <TextView
                        android:id="@+id/txtComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="33"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/img_like_bg"
                        android:src="@drawable/ic_share_black_24dp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#3d3c3c"/>
            <TextView
                android:id="@+id/txtAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOR BEAUTIFUL ADS"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@color/greyBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3d3c3c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:text="Comments:"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingBottom="45dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:weightSum="15">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sample_dp"/>
            <EditText
                android:id="@+id/edtComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14.5"
                android:maxLines="8"
                android:hint="Post a comment"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabPost"
                android:layout_weight="0.5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_gravity="center_vertical"
                app:fab_size="normal"
                android:src="@drawable/ic_send_black_24dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>